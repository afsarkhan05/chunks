<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/chunks</property>
		<property name="hibernate.connection.username">root</property>
		<property name="show_sql">false</property>
		<!--Mapping hbm -->
		<mapping resource="com/synechron/prm/bean/AuthMaster.hbm.xml" />
		<mapping resource="com/synechron/prm/bean/RecoverMaster.hbm.xml" />
		<mapping resource="com/synechron/prm/bean/CategoryMaster.hbm.xml" />
		<mapping resource="com/synechron/prm/bean/ArticleMaster.hbm.xml" />

	</session-factory>
</hibernate-configuration>
